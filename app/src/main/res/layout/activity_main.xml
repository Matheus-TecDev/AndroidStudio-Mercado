<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_gradient_market"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:padding="28dp">

        <!-- Card principal -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal"
            android:padding="24dp"
            android:background="@drawable/card_background"
            android:elevation="12dp">

            <!-- Logo -->
            <ImageView
                android:id="@+id/imgLogo"
                android:layout_width="110dp"
                android:layout_height="110dp"
                android:src="@drawable/ic_market"
                android:contentDescription="@string/app_name"
                android:layout_marginBottom="10dp" />

            <!-- Nome da marca -->
            <TextView
                android:id="@+id/tvTitulo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/mixmatheus_title"
                android:textSize="28sp"
                android:textStyle="bold"
                android:textColor="#3E1E00"
                android:fontFamily="sans-serif-black"
                android:layout_marginBottom="24dp" />

            <!-- Lista de produtos -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="12dp"
                android:background="@drawable/item_box"
                android:layout_marginBottom="26dp">

                <!-- Produto: Café -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:paddingVertical="4dp">

                    <CheckBox
                        android:id="@+id/cbCafe"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:importantForAccessibility="no" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/mixmatheus_cafe"
                        android:textColor="#4A2C13"
                        android:textSize="17sp"
                        android:layout_marginStart="4dp"/>
                </LinearLayout>

                <!-- Produto: Picanha -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:paddingVertical="4dp">

                    <CheckBox
                        android:id="@+id/cbPicanha"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:importantForAccessibility="no" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/mixmatheus_picanha"
                        android:textColor="#4A2C13"
                        android:textSize="17sp"
                        android:layout_marginStart="4dp"/>
                </LinearLayout>

                <!-- Produto: Ovos -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:paddingVertical="4dp">

                    <CheckBox
                        android:id="@+id/cbOvo"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:importantForAccessibility="no" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/mixmatheus_ovo"
                        android:textColor="#4A2C13"
                        android:textSize="17sp"
                        android:layout_marginStart="4dp"/>
                </LinearLayout>

                <!-- Produto: Refrigerante -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:paddingVertical="4dp">

                    <CheckBox
                        android:id="@+id/cbRefri"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:importantForAccessibility="no" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/mixmatheus_refri"
                        android:textColor="#4A2C13"
                        android:textSize="17sp"
                        android:layout_marginStart="4dp"/>
                </LinearLayout>

            </LinearLayout>

            <!-- Botão principal -->
            <Button
                android:id="@+id/btnCalcular"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:maxWidth="340dp"
                android:text="@string/mixmatheus_calcular"
                android:textSize="17sp"
                android:textStyle="bold"
                android:letterSpacing="0.05"
                android:background="@drawable/btn_mixmatheus_glow"
                android:textColor="#FFFFFF"
                android:padding="14dp"
                android:elevation="10dp" />
        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/mixmatheus_autor"
            android:textColor="#5E35B1"
            android:textStyle="italic"
            android:textSize="15sp"
            android:fontFamily="sans-serif-medium"
            android:layout_marginTop="30dp"
            android:shadowColor="#AA7E57C2"
            android:shadowDx="1"
            android:shadowDy="1"
            android:shadowRadius="2" />

    </LinearLayout>
</ScrollView>
