<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape>
            <gradient
                android:startColor="#512DA8"
                android:endColor="#7E57C2"
                android:angle="90"/>
            <corners android:radius="30dp"/>
        </shape>
    </item>
    <item>
        <shape>
            <gradient
                android:startColor="#7E57C2"
                android:endColor="#9575CD"
                android:angle="90"/>
            <corners android:radius="30dp"/>
            <stroke android:width="1.5dp" android:color="#D1C4E9"/>
        </shape>
    </item>
</selector>
